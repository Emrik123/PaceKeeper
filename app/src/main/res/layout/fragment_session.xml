<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C8399">


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragment_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C8399"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/return_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="#1C8399"
        android:scaleType="centerCrop"
        android:src="@drawable/backarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />



    <TextView
        android:id="@+id/titleSession"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-black"
        android:text="Sessions"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/session_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/titleSession"
        app:layout_constraintTop_toBottomOf="@+id/titleSession"
        android:background="@drawable/border"
        >

    <TextView
        android:id="@+id/summary_text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sessionOverview"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="@id/linearLayout"
        app:layout_constraintTop_toTopOf="@id/linearLayout" />


    <ImageButton
        android:id="@+id/expand_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="#009999"
        android:scaleType="centerCrop"
        android:src="@drawable/expandlogopng"
        app:layout_constraintEnd_toEndOf="@id/linearLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/linearLayout"
        app:layout_constraintTop_toBottomOf="@id/summary_text_view1" />

        <TextView
            android:id="@+id/detail_text_view_km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/each_km_in_session"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            app:layout_constraintEnd_toEndOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="@id/linearLayout"
            app:layout_constraintTop_toBottomOf="@id/expand_button" />

    <TextView
        android:id="@+id/detail_text_view_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/route"
        android:textSize="24sp"
        android:visibility="gone"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="#009999"
        app:layout_constraintEnd_toEndOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="@id/linearLayout"
        app:layout_constraintTop_toBottomOf="@id/detail_text_view_km" />

    <ImageView
        android:id="@+id/route_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/detail_text_view_route"
        android:visibility="gone"
        android:src="@drawable/cat"
        android:contentDescription="TODO" />
        />

    <TextView
        android:id="@+id/detail_text_view_session_comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/session_comment_title"
        android:textSize="24sp"
        android:background="#009999"
        android:visibility="gone"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintEnd_toEndOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="@id/linearLayout"
        app:layout_constraintTop_toBottomOf="@id/route_image" />


        <TextView
            android:id="@+id/detail_text_view_session_comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/session_comment"
            android:textSize="24sp"
            android:visibility="gone"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintEnd_toEndOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="@id/linearLayout"
            app:layout_constraintTop_toBottomOf="@id/route_image" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
