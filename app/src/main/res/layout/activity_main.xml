<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainactivity"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

<!--For the start button-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <ImageButton
        android:id="@+id/confirmButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:scaleType="centerCrop"
        android:src="@drawable/starbuttongreen"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_vertical_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/confirmButton"

            android:id="@+id/linearLayout2">

        <NumberPicker
                android:id="@+id/leftNPicker"
                android:layout_width="107dp"
                android:layout_height="211dp"
                android:visibility="visible"
            android:solidColor="@color/white"
                android:layout_marginEnd="5dp"
            tools:layout_editor_absoluteY="102dp"
                tools:visibility="visible"/>

        <TextView
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/dot" android:layout_weight="1"
                android:textSize="34sp"
                android:layout_gravity="center"
        />



        <NumberPicker
                android:id="@+id/rightNPicker"
                android:layout_width="102dp"
                android:layout_height="211dp"
            android:solidColor="@color/white"

            android:layout_marginStart="5dp"
                android:visibility="visible"
                tools:visibility="visible"/>


    </LinearLayout>




    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#cc112c"
        android:scaleType="centerCrop"
        android:src="@drawable/settinglogo"
        app:layout_constraintEnd_toEndOf="@id/fragment_container"
        app:layout_constraintTop_toTopOf="@id/fragment_container" />

    <ImageButton
        android:id="@+id/historyButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#d3232d"
        android:scaleType="centerCrop"
        android:src="@drawable/history"
        app:layout_constraintStart_toStartOf="@id/fragment_container"
        app:layout_constraintTop_toTopOf="@id/fragment_container" />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/unitTextView"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578" app:layout_constraintVertical_bias="0.51"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"/>

    <TextView
        android:id="@+id/minutesTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="7dp"
        android:text="@string/minutes_tag"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/secondsTag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/secondsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="7dp"

        android:text="@string/seconds_tag"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/minutesTag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>