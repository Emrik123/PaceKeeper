<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C8399"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

<!--For the start button-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <Button
        android:id="@+id/confirmButton"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="113dp"
        android:layout_height="121dp"
        android:backgroundTint="#F44336"
        android:text="@string/confirm"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_vertical_icon"
        tools:visibility="visible" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/confirmButton"

            android:id="@+id/linearLayout2">

        <NumberPicker
                android:id="@+id/leftNPicker"
                android:layout_width="107dp"
                android:layout_height="211dp"
                android:visibility="visible"
                android:layout_marginEnd="5dp"
                tools:layout_editor_absoluteY="102dp"
                tools:visibility="visible"/>

        <TextView
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/dot" android:layout_weight="1"
                android:textSize="34sp"
                android:layout_gravity="center"
        />



        <NumberPicker
                android:id="@+id/rightNPicker"
                android:layout_width="102dp"
                android:layout_height="211dp"
                android:layout_marginStart="5dp"
                android:visibility="visible"
                tools:visibility="visible"/>


    </LinearLayout>




    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#1C8399"
        android:scaleType="centerCrop"
        android:src="@drawable/settinglogo"
        app:layout_constraintEnd_toEndOf="@id/fragment_container"
        app:layout_constraintTop_toTopOf="@id/fragment_container" />

    <ImageButton
        android:id="@+id/historyButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#1C8399"
        android:scaleType="centerCrop"
        android:src="@drawable/history"
        app:layout_constraintStart_toStartOf="@id/fragment_container"
        app:layout_constraintTop_toTopOf="@id/fragment_container" />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/unitTextView"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578" app:layout_constraintVertical_bias="0.51"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"/>
    <TextView
            android:text="@string/minutes_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/minutesTag"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="116dp" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2" app:layout_constraintEnd_toStartOf="@+id/secondsTag"
            android:layout_marginEnd="67dp"/>
    <TextView
            android:text="@string/seconds_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/secondsTag"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toEndOf="@+id/minutesTag" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2" android:layout_marginEnd="114dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.51"/>


</androidx.constraintlayout.widget.ConstraintLayout>