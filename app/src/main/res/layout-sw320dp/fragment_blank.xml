<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/fragment_blank"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#007BFF"
                                                   android:visibility="visible"
                                                   android:clickable="true"
                                                   tools:context=".MainActivity"
                                                   tools:visibility="visible">
    <!--For some reason all horizontal placement is set using orientation vertical and vice versa for vertical-->
    <!--I don't know why-->

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_start_pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_end_pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top_of_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.84"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top_of_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.86"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom_of_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_start_of_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.67"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_end_of_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.84"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_end_of_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_icon_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

    <!--This is only used for the pause button-->
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.97"/>

    <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#007BFF"
            android:scaleType="centerCrop"
            android:src="@drawable/settinglogo" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/timeLogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_horizontal_icon_end"
            app:layout_constraintBottom_toTopOf="@id/time_text"
            android:src="@drawable/stopwatch"
            android:contentDescription="Stopwatch"/>


    <TextView
            android:id="@+id/time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/timeS"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#333333"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/time"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end_of_stop_button"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/guideline_horizontal_text"
            app:layout_constraintTop_toBottomOf="@+id/timeLogo"/>
    <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end_of_stop_button"
            app:layout_constraintStart_toStartOf="@id/guideline_horizontal_text"
            app:layout_constraintTop_toBottomOf="@+id/time_text"
            app:layout_constraintBottom_toTopOf="@id/distanceLogo"
            android:text="@string/time"
            android:textColor="#FFFFFF"
            android:textSize="55sp"
            android:visibility="visible"
            tools:visibility="visible"/>

    <ImageView
            android:id="@+id/distanceLogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time"
            app:layout_constraintEnd_toEndOf="@id/guideline_horizontal_icon_end"
            app:layout_constraintBottom_toTopOf="@id/distance"
            android:src="@drawable/distancelog"/>

    <TextView
            android:id="@+id/distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/distance"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#333333"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end_of_stop_button"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/guideline_horizontal_text"
            app:layout_constraintBottom_toTopOf="@id/distanceDisplay"
            app:layout_constraintTop_toBottomOf="@+id/distanceLogo"/>

    <TextView
            android:id="@+id/distanceDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end_of_stop_button"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/guideline_horizontal_text"
            app:layout_constraintTop_toBottomOf="@+id/distance"
            app:layout_constraintBottom_toTopOf="@id/speedLogo"
            android:text="@string/distanceS"
            android:textColor="#FFFFFF"
            android:textSize="55sp"
            android:visibility="visible"
            tools:visibility="visible"/>

    <ImageView
            android:id="@+id/speedLogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distanceDisplay"
            app:layout_constraintEnd_toEndOf="@id/guideline_horizontal_icon_end"
            app:layout_constraintBottom_toTopOf="@id/speed"
            android:src="@drawable/pngwing"/>

    <TextView
            android:id="@+id/speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/speed"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#333333"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end_of_stop_button"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/guideline_horizontal_text"
            app:layout_constraintBottom_toTopOf="@id/speedDisplay"
            app:layout_constraintTop_toBottomOf="@+id/speedLogo"/>


    <TextView
            android:id="@+id/speedDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end_of_stop_button"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/guideline_horizontal_text"
            app:layout_constraintTop_toBottomOf="@+id/speed"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_end_of_info"
            android:text="@string/distanceS"
            android:textColor="#FFFFFF"
            android:textSize="55sp"
            android:visibility="visible"
            tools:visibility="visible"/>
    <ImageButton
            android:id="@+id/pauseButtonLogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/pauselogo"
            app:layout_constraintStart_toStartOf="@+id/guideline_horizontal_start_pause_button"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_vertical_icon"
            app:layout_constraintTop_toBottomOf="@+id/guideline_top_of_start_button"
            app:layout_constraintEnd_toStartOf="@+id/guideline_horizontal_end_pause_button"
            android:scaleType="centerInside"
            android:background="@drawable/round_button"
    />
    <ImageButton
            android:id="@+id/playButtonLogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/playlogo"
            app:layout_constraintStart_toStartOf="@+id/guideline_horizontal_start_pause_button"
            app:layout_constraintEnd_toStartOf="@+id/guideline_horizontal_end_pause_button"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_vertical_icon"
            app:layout_constraintTop_toBottomOf="@+id/guideline_top_of_start_button"
            android:scaleType="centerInside"
            android:background="@drawable/round_button"
    />
    <ImageButton
            android:id="@+id/stopButtonLogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/stoplogo"
            android:scaleType="fitCenter"
            android:background="@drawable/round_button"
            app:layout_constraintStart_toEndOf="@+id/guideline_vertical_start_of_stop_button"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end_of_stop_button"
            app:layout_constraintBottom_toTopOf="@+id/guideline_bottom_of_stop_button"
            app:layout_constraintTop_toTopOf="@+id/guideline_top_of_stop_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>